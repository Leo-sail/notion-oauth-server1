{
  "functions": {
    "api/*.py": {
      "runtime": "python3.9"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/auth",
      "dest": "/api/auth.py"
    },
    {
      "src": "/api/callback",
      "dest": "/api/callback.py"
    },
    {
      "src": "/api/index",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "NOTION_CLIENT_ID": "@notion_client_id",
    "NOTION_CLIENT_SECRET": "@notion_client_secret",
    "REDIRECT_URI": "@redirect_uri"
  }
}